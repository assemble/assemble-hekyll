<!-- begin SEO -->
{{#if seo_tag.title}}
  <title>{{ seo_tag.title }}</title>
{{/if}}

<meta name="generator" content="Assemble v{{ assemble.version }}" />

{{#if seo_tag.page_title}}
  <meta property="og:title" content="{{ seo_tag.page_title }}" />
{{/if}}

{{#if seo_tag.author.name}}
  <meta name="author" content="{{ seo_tag.author.name }}" />
{{/if}}

<meta property="og:locale" content="{{replace seo_tag.page_lang '-' '_'}}" />

{{#if seo_tag.description}}
  <meta name="description" content="{{ seo_tag.description }}" />
  <meta property="og:description" content="{{ seo_tag.description }}" />
{{/if}}

{{#if site.url}}
  <link rel="canonical" href="{{ seo_tag.canonical_url }}" />
  <meta property="og:url" content="{{ seo_tag.canonical_url }}" />
{{/if}}

{{#if seo_tag.site_title}}
  <meta property="og:site_name" content="{{ seo_tag.site_title }}" />
{{/if}}

{{#if seo_tag.image}}
  <meta property="og:image" content="{{ seo_tag.image.path }}" />
  {{#if seo_tag.image.height}}
    <meta property="og:image:height" content="{{ seo_tag.image.height }}" />
  {{/if}}
  {{#if seo_tag.image.width}}
    <meta property="og:image:width" content="{{ seo_tag.image.width }}" />
  {{/if}}
{{/if}}

{{#if page.date}}
  <meta property="og:type" content="article" />
  <meta property="article:published_time" content="{{date_to_xmlschema page.date}}" />
{{/if}}

{{#if paginator.previous_page}}
  <link rel="prev" href="{{absolute_url paginator.previous_page_path}}">
{{/if}}
{{#if paginator.next_page}}
  <link rel="next" href="{{absolute_url paginator.next_page_path}}">
{{/if}}

{{#if site.twitter}}
  {{#if seo_tag.image}}
    <meta name="twitter:card" content="summary_large_image" />
  {{else}}
    <meta name="twitter:card" content="summary" />
  {{/if}}

  <meta name="twitter:site" content="@{{replace site.twitter.username '@' ''}}" />

  {{#if seo_tag.author.twitter}}
    <meta name="twitter:creator" content="@{{ seo_tag.author.twitter }}" />
  {{/if}}
{{/if}}

{{#if site.facebook}}
  {{#if site.facebook.admins}}
    <meta property="fb:admins" content="{{{ site.facebook.admins }}}" />
  {{/if}}

  {{#if site.facebook.publisher}}
    <meta property="article:publisher" content="{{{ site.facebook.publisher }}}" />
  {{/if}}

  {{#if site.facebook.app_id}}
    <meta property="fb:app_id" content="{{{ site.facebook.app_id }}}" />
  {{/if}}
{{/if}}

{{#if site.webmaster_verifications}}
  {{#if site.webmaster_verifications.google}}
    <meta name="google-site-verification" content="{{{ site.webmaster_verifications.google }}}">
  {{/if}}

  {{#if site.webmaster_verifications.bing}}
    <meta name="msvalidate.01" content="{{{ site.webmaster_verifications.bing }}}">
  {{/if}}

  {{#if site.webmaster_verifications.alexa}}
    <meta name="alexaVerifyID" content="{{{ site.webmaster_verifications.alexa }}}">
  {{/if}}

  {{#if site.webmaster_verifications.yandex}}
    <meta name="yandex-verification" content="{{{ site.webmaster_verifications.yandex }}}">
  {{/if}}
{{else if site.google_site_verification}}
  <meta name="google-site-verification" content="{{{ site.google_site_verification }}}" />
{{/if}}

<script type="application/ld+json">
  {{jsonify seo_tag.json_ld}}
</script>

<!-- end SEO -->
